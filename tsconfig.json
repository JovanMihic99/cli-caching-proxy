{
  "compilerOptions": {
    "target": "ES2020", // Set target ECMAScript version
    "module": "CommonJS", // Use ES module syntax
    "moduleResolution": "node", // Resolve modules in the same way as Node.js
    "outDir": "./dist", // Output directory for compiled JavaScript
    "esModuleInterop": true, // Enable interoperability between ES modules and CommonJS
    "skipLibCheck": true, // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
